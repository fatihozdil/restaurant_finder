<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   android:id="@+id/AccountPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AccountFragment">


    <ImageView


        android:id="@+id/imageView3"
        android:layout_width="412dp"
        android:layout_height="737dp"
        android:contentDescription="TODO"
        android:scaleType="centerCrop"
        android:src="@drawable/pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="246dp"
        android:layout_height="52dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Account"
        android:textColor="@color/teal_777"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />

    <TextView

        android:id="@+id/accountName"
        android:layout_width="342dp"
        android:layout_height="55dp"
        android:drawableLeft="@drawable/ic_baseline_account_circle_24"
        android:drawablePadding="13dp"
        android:gravity="center_vertical"

        android:text="@string/full_name"
        android:textColorHint="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.224"
        app:layout_constraintWidth_percent=" .8" />

    <TextView

        android:id="@+id/accountFavorites"
        android:layout_width="342dp"
        android:layout_height="58dp"
        android:autofillHints=""
        android:drawableLeft="@drawable/ic_baseline_favorite_24"
        android:drawablePadding="13dp"
        android:gravity="center_vertical"
        android:text="Favourites"
        android:textColorHint="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.512"
        app:layout_constraintWidth_percent=" .8" />

    <TextView
        android:id="@+id/accountEmail"
        android:layout_width="342dp"
        android:layout_height="55dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="13dp"
        android:gravity="center_vertical"
        android:text="E_mail"
        android:textColorHint="@color/black"

        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36"
        app:layout_constraintWidth_percent=" .8" />

    <TextView
        android:id="@+id/accountSettings"
        android:layout_width="342dp"
        android:layout_height="58dp"
        android:autofillHints=""
        android:drawableLeft="@drawable/ic_baseline_settings_24"
        android:drawablePadding="13dp"
        android:gravity="center_vertical"
        android:text="Settings"
        android:textColorHint="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.656"
        app:layout_constraintWidth_percent=" .8" />

    <ImageButton
        android:id="@+id/accountSettingButton"
        android:layout_width="58dp"
        android:layout_height="51dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/accountSettings"
        app:layout_constraintEnd_toEndOf="@+id/accountSettings"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/accountSettings"
        app:layout_constraintTop_toTopOf="@+id/accountSettings"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/accountFavoritesButton"
        android:layout_width="57dp"
        android:layout_height="59dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/accountFavorites"
        app:layout_constraintEnd_toEndOf="@+id/accountFavorites"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/accountFavorites"
        app:layout_constraintTop_toTopOf="@+id/accountFavorites"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24" />


</androidx.constraintlayout.widget.ConstraintLayout>